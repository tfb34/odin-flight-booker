

<form class = "form-horizontal">
<h1>Odin Flight Booker</h1>
<%=form_tag flights_path, :method => 'get' do%>
	<div class = "form-group">
		<label class = "control-label col-sm-5" >
	    	<%= label_tag 'from_airport_id', 'From'%>
	    </label>
	    <div class = "col-sm-7">
			<%= select_tag(:from_airport_id,options_for_select(@airports_array))%>
		</div>
	</div>

	<div class = "form-group">
		<label class = "control-label col-sm-5" >
			<%= label_tag 'to_airport_id', 'To'%>
		</label>
		<div class = "col-sm-7">
			<%= select_tag(:to_airport_id, options_for_select(@airports_array, 2))%>
		</div>
	</div>

	<div class = "form-group">
		<label class = "control-label col-sm-5" >
			<%= label_tag 'passengers', '# of Passengers'%>
		</label>
		<div class = "col-sm-7">
			<%= select_tag 'passengers', options_for_select([1,2,3,4])%>
		</div>
	</div>
	<div class = "form-group">
		<label class = "control-label col-sm-5" for = "date">
			<%= label_tag 'date', 'Date' %>
		</label>
		<div class = "col-sm-7">
			<%= select_month(Date.today)%>
			<%= select_year(Date.today, :start_year => Date.today.year, :end_year => 8.years.from_now.year)%>
		</div>
	</div>
	<div class = "form-group">
		<div class = "col-sm-offset-5 col-sm-7">
    		<%= submit_tag("Search")%>
    	</div>
    </div>
<%end%>
</form>


<%=render 'results'%>

